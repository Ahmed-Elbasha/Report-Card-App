<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ahmedelbasha.reportcard">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddStudentActivity"
            android:label="Add Student Grade Report"/>
        <activity
            android:name=".GradeDetailsActivity"
            android:label="Student Grade Report Card"/>
        <activity
            android:name=".ModifyStudentGradeActivity"
            android:label="Modify Student Grade Report"/>
        <activity
            android:name=".ReportCardOptionsActivity"
            android:label="Student Grade Report Options"></activity>
    </application>

</manifest>